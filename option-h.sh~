function option-h() {
echo "[-version][-v][-help][-h][-d][-lp][-s][-lcpu][-save]"
echo -e "\n${YELLOW} -lpy:    ${NC} Afficher l'Utilisation des Disques."
echo -e "${YELLOW} -ldk:   ${NC} Afficher les Information Relatives au Disques."
echo -e "${YELLOW} -s:    ${NC} Afficher l'Etat d'un Processus."
echo -e "${YELLOW} -lcpu: ${NC} Afficher les Information en Relation Avec le CPU."
echo -e "${YELLOW} -save: ${NC} Sauvgarder les Resultat Dans un Fichier Output "
echo -e "${YELLOW} -v:    ${NC} Version.\n\n"
}
